@model Apps.Web.Models.UserModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <h2>Login</h2>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true, "Login fallido, verificar los datos.");
        <div>
            <fieldset>
                <legend>Inicio de Sesión</legend>
                <div>@Html.LabelFor(entity => entity.CodeUser, htmlAttributes: new { @class = "control-label" })</div>
                <div>
                    @Html.TextBoxFor(entity => entity.CodeUser,htmlAttributes: new { @class = "form-control"})
                    @Html.ValidationMessageFor(entity => entity.CodeUser)
                </div>

                <div>@Html.LabelFor(entity => entity.Password) </div>
                <div>
                    @Html.PasswordFor(entity => entity.Password, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(entity => entity.Password)
                </div>

                <div class="row clearfix">
                    <input type="submit" value="Ingresar" class="btn btn-primary" />
                </div>                
            </fieldset>
        </div>
    }

</div>